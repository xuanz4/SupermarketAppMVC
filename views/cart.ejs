<%- include('partials/head', { pageTitle: 'Your Cart | Supermarket', bodyClass: 'bg-surface' }) %>
<%- include('partials/topbar') %>

  <main class="page-section">
    <div class="container">
      <% if (messages && messages.length) { %>
        <% messages.forEach(function(message) { %>
          <div class="alert alert-success mb-3"><%= message %></div>
        <% }); %>
      <% } %>

      <% if (errors && errors.length) { %>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-danger mb-3"><%= error %></div>
        <% }); %>
      <% } %>

      <% if (cart.length === 0) { %>
        <div class="empty-state">
          <h3>Your cart is empty</h3>
          <p class="text-muted">Browse our catalogue and add items to see them here.</p>
          <a href="/shopping" class="btn btn-primary">Start shopping</a>
        </div>
      <% } else { %>
        <div class="row g-4">
          <div class="col-12 col-xl-8">
            <div class="d-flex align-items-center justify-content-between mb-3">
              <h5 class="mb-0 text-navy">Items</h5>
              <span class="pill-soft"><%= cart.length %> products</span>
            </div>
            <div class="d-flex flex-column gap-3">
              <% let total = 0; %>
              <% let totalSavings = 0; %>
              <% cart.forEach(function(item) { %>
                <% total += item.price * item.quantity; %>
                <% if (item.hasDiscount) { totalSavings += (item.originalPrice - item.price) * item.quantity; } %>
                <div class="card border-0 shadow-sm">
                  <div class="card-body d-flex flex-column flex-md-row gap-3 align-items-start">
                    <% if (item.image) { %>
                      <img src="/images/<%= item.image %>" class="rounded" alt="<%= item.productName %>" style="width: 120px; height: 120px; object-fit: cover;">
                    <% } else { %>
                      <div class="placeholder-img" style="width: 120px; height: 120px;">No image</div>
                    <% } %>
                    <div class="flex-grow-1 w-100">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h6 class="mb-1"><%= item.productName %></h6>
                          <% if (item.offerMessage) { %>
                            <span class="deal-flag">Offer</span>
                          <% } %>
                        </div>
                        <span class="pill-soft">$<%= (item.price * item.quantity).toFixed(2) %></span>
                      </div>

                      <% if (item.hasDiscount) { %>
                        <p class="mb-2">
                          <span class="text-muted text-decoration-line-through small">$<%= Number(item.originalPrice).toFixed(2) %></span>
                          <span class="text-success fw-semibold ms-2">$<%= Number(item.price).toFixed(2) %></span>
                          <span class="deal-flag ms-2">Save <%= Number(item.discountPercentage).toFixed(0) %>%</span>
                        </p>
                      <% } else { %>
                        <p class="mb-2 fw-semibold">$<%= Number(item.price).toFixed(2) %></p>
                      <% } %>

                      <% if (item.offerMessage) { %>
                        <div class="alert alert-info py-2 mb-3">
                          <div class="small mb-0"><%= item.offerMessage %></div>
                        </div>
                      <% } %>

                      <div class="d-flex flex-wrap gap-2">
                        <form action="/cart/update/<%= item.productId %>" method="POST" class="d-flex align-items-center gap-2">
                          <label for="cart-quantity-<%= item.productId %>" class="form-label mb-0 small text-muted text-uppercase">Qty</label>
                          <div class="input-group" style="max-width: 190px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="stepQty('cart-quantity-<%= item.productId %>', -1)">-</button>
                            <input type="number" id="cart-quantity-<%= item.productId %>" name="quantity" class="form-control text-center" min="1" value="<%= item.quantity %>" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="stepQty('cart-quantity-<%= item.productId %>', 1)">+</button>
                          </div>
                          <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                        <form action="/cart/remove/<%= item.productId %>" method="POST">
                          <button type="submit" class="btn btn-outline-danger">Remove</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>

          <div class="col-12 col-xl-4">
            <div class="card summary-card summary-sticky">
              <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                  <span class="text-muted">Items</span>
                  <span class="fw-semibold">$<%= total.toFixed(2) %></span>
                </div>
                <% if (totalSavings > 0) { %>
                  <div class="d-flex justify-content-between mb-2 text-success">
                    <span>Savings</span>
                    <span>- $<%= totalSavings.toFixed(2) %></span>
                  </div>
                <% } %>
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="text-muted">Delivery</span>
                  <% if (user && user.free_delivery) { %>
                    <span class="pill-soft">Free</span>
                  <% } else { %>
                    <span class="pill-soft">+$1.50</span>
                  <% } %>
                </div>

                <div class="alert <%= user && user.free_delivery ? 'alert-success' : 'alert-info' %> py-2">
                  <% if (user && user.free_delivery) { %>
                    <strong>Free delivery unlocked!</strong>
                  <% } else { %>
                    Delivery adds a flat $1.50 at checkout.
                  <% } %>
                </div>

                <div class="d-grid gap-2">
                  <a class="btn btn-success btn-lg" href="/checkout">Checkout</a>
                </div>
              </div>
              <% if (totalSavings > 0) { %>
                <div class="card-footer text-success fw-semibold">
                  You are saving $<%= totalSavings.toFixed(2) %> on this order.
                </div>
              <% } %>
            </div>
            <div class="d-grid d-md-flex justify-content-md-end mt-3">
              <a href="/shopping" class="btn btn-outline-secondary">Continue shopping</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <script>
    function stepQty(id, delta) {
      var input = document.getElementById(id);
      if (!input) return;
      var next = Math.max(1, parseInt(input.value || '1', 10) + delta);
      input.value = next;
    }
  </script>
<%- include('partials/footer') %>
