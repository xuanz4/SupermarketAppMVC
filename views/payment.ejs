<%- include('partials/head', { pageTitle: 'Payment | Supermarket', bodyClass: 'bg-surface' }) %>
<%- include('partials/topbar') %>

<main class="page-section">
  <div class="container">
    <% if (messages && messages.length) { %>
      <% messages.forEach(function(message) { %>
        <div class="alert alert-success mb-3"><%= message %></div>
      <% }); %>
    <% } %>

    <% if (errors && errors.length) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert alert-danger mb-3"><%= error %></div>
      <% }); %>
    <% } %>

    <div class="row g-4">
      <div class="col-12 col-lg-7">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <h4 class="mb-3">Payment</h4>
            <form action="/payment/confirm" method="POST" class="d-flex flex-column gap-3" id="payment-form">
              <div class="d-flex flex-wrap gap-3">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-paypal" value="paypal" checked>
                  <label class="form-check-label fw-semibold" for="pay-paypal">PayPal</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-stripe" value="stripe">
                  <label class="form-check-label fw-semibold" for="pay-stripe">Stripe</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-stripe-paynow" value="stripe_paynow">
                  <label class="form-check-label fw-semibold" for="pay-stripe-paynow">Stripe PayNow (QR)</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-nets" value="nets">
                  <label class="form-check-label fw-semibold" for="pay-nets">NETS QR</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-wallet" value="wallet">
                  <label class="form-check-label fw-semibold" for="pay-wallet">E-Wallet</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="pay-cash" value="cash">
                  <label class="form-check-label fw-semibold" for="pay-cash">Cash</label>
                </div>
              </div>

              <div class="payment-section d-none" data-payment="paypal">
                <% if (paypalClientId) { %>
                  <div id="paypal-button-container"></div>
                  <small class="text-muted d-block mt-2">Complete the PayPal checkout to place your order.</small>
                <% } else { %>
                  <div class="alert alert-warning mb-0">
                    PayPal is not configured. Please set your PayPal sandbox credentials.
                  </div>
                <% } %>
              </div>

              <div class="payment-section d-none" data-payment="stripe">
                <% if (stripePublishableKey) { %>
                  <div id="stripe-card-element" class="mb-3"></div>
                  <div id="stripe-error" class="text-danger small mb-2"></div>
                  <button type="button" id="stripe-pay-btn" class="btn btn-success btn-lg fw-semibold w-100">Pay with Stripe</button>
                <% } else { %>
                  <div class="alert alert-warning mb-0">
                    Stripe is not configured. Please set your Stripe keys.
                  </div>
                <% } %>
              </div>

              <div class="payment-section d-none" data-payment="stripe_paynow">
                <% if (stripePublishableKey) { %>
                  <div class="alert alert-info mb-2">
                    <div class="fw-semibold mb-1">Stripe PayNow</div>
                    <div class="small mb-0">Generate a Stripe PayNow QR code to scan and pay.</div>
                  </div>
                  <div id="stripe-paynow-qr" class="text-center mb-3 d-none">
                    <iframe id="stripe-paynow-frame" title="Stripe PayNow QR" class="w-100 border-0 rounded d-none" style="height: 720px; overflow: hidden;" scrolling="no"></iframe>
                    <img id="stripe-paynow-img" src="" alt="Stripe PayNow QR" class="img-fluid rounded d-none" style="max-width: 260px;">
                    <div class="small text-muted mt-2">Scan with your banking app to pay.</div>
                  </div>
                  <div id="stripe-paynow-error" class="text-danger small mb-2"></div>
                  <div id="stripe-paynow-status" class="small text-muted">Generating PayNow QR…</div>
                <% } else { %>
                  <div class="alert alert-warning mb-0">
                    Stripe is not configured. Please set your Stripe keys.
                  </div>
                <% } %>
              </div>

              <div class="payment-section d-none" data-payment="nets">
                <div class="alert alert-info mb-2">
                  <div class="fw-semibold mb-1">NETS QR</div>
                  <div class="small mb-0">Generate a NETS QR code to scan and pay.</div>
                </div>
              </div>

              <div class="payment-section d-none" data-payment="wallet">
                <div class="alert alert-info mb-2">
                  <div class="fw-semibold mb-1">E-Wallet</div>
                  <div class="small mb-0">Wallet balance: $<%= Number(walletBalance || 0).toFixed(2) %></div>
                </div>
                <% if (Number(walletBalance || 0) < Number(totalWithFees || 0)) { %>
                  <div class="small text-danger">Insufficient balance. Please top up before paying.</div>
                <% } else { %>
                  <div class="small text-muted">You have enough balance to cover this order.</div>
                <% } %>
              </div>

              <div class="payment-section d-none" data-payment="cash">
                <div class="alert alert-secondary mb-0">
                  <div class="fw-semibold mb-1">Cash on delivery/pickup</div>
                  <div class="small mb-0">Prepare exact change. Rider/staff will collect upon handover.</div>
                </div>
              </div>

              <div class="alert alert-info mb-0">
                <div class="fw-semibold mb-1">Delivery</div>
                <div class="small mb-1">Method: <%= pending ? pending.deliveryMethod : 'pickup' %></div>
                <% if (pending && pending.deliveryMethod === 'delivery') { %>
                  <div class="small mb-0">Address: <%= pending.deliveryAddress %></div>
                <% } %>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg fw-semibold" id="confirm-payment">Confirm payment $<%= totalWithFees.toFixed(2) %></button>
                <a class="btn btn-secondary fw-semibold" href="/checkout">Back to checkout</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-5">
        <div class="card summary-card shadow-sm">
          <div class="card-body">
            <h5 class="mb-3">Order summary</h5>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Items</span>
              <span class="fw-semibold">$<%= itemsTotal.toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Delivery fee</span>
              <span class="pill-soft">$<%= Number(deliveryFee || 0).toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center border-top pt-3">
              <span class="fw-semibold">Total</span>
              <span class="fw-bold">$<%= totalWithFees.toFixed(2) %></span>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
          <div class="card-body">
            <h6 class="mb-3">Items</h6>
            <div class="d-flex flex-column gap-2">
              <% cart.forEach(function(item) { %>
                <div class="d-flex justify-content-between">
                  <span><%= item.productName %> × <%= item.quantity %></span>
                  <span class="fw-semibold">$<%= item.lineTotal.toFixed(2) %></span>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>

<% if (paypalClientId) { %>
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD"></script>
<% } %>
<% if (stripePublishableKey) { %>
  <script src="https://js.stripe.com/v3/"></script>
<% } %>

<script>
  (function() {
    const form = document.getElementById('payment-form');
    if (!form) return;

    const sections = Array.from(document.querySelectorAll('.payment-section'));
    const radios = form.querySelectorAll('input[name="paymentMethod"]');
    const confirmButton = form.querySelector('#confirm-payment');
    const defaultAction = form.getAttribute('action') || '/payment/confirm';

    function updateSections(method) {
      sections.forEach((section) => {
        const target = section.getAttribute('data-payment');
        const isMatch = target === method;
        section.classList.toggle('d-none', !isMatch);
        section.querySelectorAll('input').forEach((input) => {
          input.required = false;
        });
      });

      if (confirmButton) {
        const hideConfirm = method === 'paypal' || method === 'stripe' || method === 'stripe_paynow';
        const insufficientWallet = method === 'wallet' && Number(<%= Number(walletBalance || 0).toFixed(2) %>) < Number(<%= Number(totalWithFees || 0).toFixed(2) %>);
        confirmButton.classList.toggle('d-none', hideConfirm);
        confirmButton.disabled = hideConfirm || insufficientWallet;
        confirmButton.textContent = method === 'nets'
          ? 'Generate NETS QR'
          : (insufficientWallet ? 'Insufficient wallet balance' : 'Confirm payment $<%= totalWithFees.toFixed(2) %>');
      }

      if (method === 'nets') {
        form.setAttribute('action', '/nets-qr/create');
      } else {
        form.setAttribute('action', defaultAction);
      }

      document.dispatchEvent(new CustomEvent('payment:method', { detail: { method } }));
    }

    radios.forEach((radio) => {
      radio.addEventListener('change', function() {
        if (this.checked) {
          updateSections(this.value);
        }
      });
    });

    updateSections(form.querySelector('input[name="paymentMethod"]:checked').value);
  })();
</script>

<script>
  (function() {
    if (!window.paypal) return;

    const buttonContainer = document.getElementById('paypal-button-container');
    if (!buttonContainer) return;

    paypal.Buttons({
      createOrder: function() {
        return fetch('/paypal/create-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        })
          .then((response) => response.json())
          .then((order) => order.id);
      },
      onApprove: function(data) {
        return fetch('/paypal/capture-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ orderId: data.orderID })
        })
          .then((response) => response.json())
          .then((result) => {
            if (result && result.redirect) {
              window.location.href = result.redirect;
              return;
            }
            alert(result && result.error ? result.error : 'Payment completed, but we could not finalise the order.');
          });
      },
      onError: function(err) {
        console.error('PayPal error:', err);
        alert('PayPal checkout failed. Please try again.');
      }
    }).render('#paypal-button-container');
  })();
</script>

<script>
  (function() {
    const stripeKey = '<%= stripePublishableKey %>';
    if (!stripeKey || !window.Stripe) return;

    const stripe = Stripe(stripeKey);
    const elements = stripe.elements();
    const cardElement = elements.create('card', { hidePostalCode: true });
    const cardMount = document.getElementById('stripe-card-element');
    const stripeButton = document.getElementById('stripe-pay-btn');
    const stripeError = document.getElementById('stripe-error');

    if (cardMount) {
      cardElement.mount(cardMount);
    }

    if (!stripeButton) return;

    stripeButton.addEventListener('click', async function() {
      stripeButton.disabled = true;
      if (stripeError) stripeError.textContent = '';

      try {
        const intentResponse = await fetch('/stripe/create-payment-intent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const intentData = await intentResponse.json();
        if (intentData.error) {
          throw new Error(intentData.error);
        }

        const { error, paymentIntent } = await stripe.confirmCardPayment(intentData.clientSecret, {
          payment_method: { card: cardElement }
        });
        if (error) {
          throw new Error(error.message || 'Stripe payment failed.');
        }

        const confirmResponse = await fetch('/stripe/confirm-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ paymentIntentId: paymentIntent.id })
        });
        const confirmData = await confirmResponse.json();
        if (confirmData.redirect) {
          window.location.href = confirmData.redirect;
          return;
        }
        if (confirmData.error) {
          throw new Error(confirmData.error);
        }
      } catch (err) {
        if (stripeError) stripeError.textContent = err.message || 'Stripe payment failed.';
      } finally {
        stripeButton.disabled = false;
      }
    });
  })();
</script>

<script>
  (function() {
    const statusEl = document.getElementById('stripe-paynow-status');
    const qrWrapper = document.getElementById('stripe-paynow-qr');
    const qrImg = document.getElementById('stripe-paynow-img');
    const errorEl = document.getElementById('stripe-paynow-error');
    const frameEl = document.getElementById('stripe-paynow-frame');
    if (!qrWrapper) return;

    let currentIntentId = null;
    let generating = false;
    let pollTimer = null;
    let pollCount = 0;

    async function generatePaynow() {
      if (generating) return;
      generating = true;
      pollCount = 0;
      if (errorEl) errorEl.textContent = '';
      if (statusEl) statusEl.textContent = 'Generating PayNow QR…';
      try {
        const response = await fetch('/stripe/paynow/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const data = await response.json();
        if (data.error) {
          throw new Error(data.error);
        }
        if (!data.qrCodeUrl && !data.qrCodeData && !data.hostedUrl) {
          throw new Error('Stripe PayNow QR not available.');
        }
        currentIntentId = data.paymentIntentId;
        if (frameEl) {
          if (data.hostedUrl) {
            frameEl.src = data.hostedUrl;
            frameEl.classList.remove('d-none');
            qrImg.classList.add('d-none');
          } else {
            frameEl.classList.add('d-none');
          }
        }
        if (!data.hostedUrl) {
          if (data.qrCodeUrl) {
            qrImg.src = data.qrCodeUrl;
          } else {
            qrImg.src = data.qrCodeData ? ('data:image/png;base64,' + data.qrCodeData) : '';
          }
          qrImg.classList.remove('d-none');
        }
        qrWrapper.classList.remove('d-none');
        if (statusEl) statusEl.textContent = 'Waiting for payment confirmation…';
        startPolling();
      } catch (err) {
        if (errorEl) errorEl.textContent = err.message || 'Unable to create Stripe PayNow QR.';
        if (statusEl) statusEl.textContent = 'Unable to generate PayNow QR.';
      } finally {
        generating = false;
      }
    }

    function stopPolling() {
      if (pollTimer) {
        clearInterval(pollTimer);
        pollTimer = null;
      }
    }

    function startPolling() {
      stopPolling();
      pollTimer = setInterval(async function() {
        pollCount += 1;
        if (pollCount > 60) {
          stopPolling();
          if (statusEl) statusEl.textContent = 'Payment not completed yet.';
          return;
        }
        await checkPaynowStatus();
      }, 5000);
    }

    async function checkPaynowStatus() {
      if (!currentIntentId) return;
      if (errorEl) errorEl.textContent = '';
      try {
        const response = await fetch('/stripe/paynow/confirm', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ paymentIntentId: currentIntentId })
        });
        const data = await response.json();
        if (data.redirect) {
          window.location.href = data.redirect;
          return;
        }
        if (data.error) {
          if (statusEl) statusEl.textContent = data.error;
          return;
        }
        if (data.pending) {
          if (statusEl) statusEl.textContent = 'Waiting for payment confirmation…';
          return;
        }
      } catch (err) {
        if (errorEl) errorEl.textContent = err.message || 'Stripe PayNow payment not completed yet.';
      }
    }

    document.addEventListener('payment:method', (event) => {
      if (!event.detail || event.detail.method !== 'stripe_paynow') {
        return;
      }
      generatePaynow();
    });

    const selected = document.querySelector('input[name="paymentMethod"]:checked');
    if (selected && selected.value === 'stripe_paynow') {
      generatePaynow();
    }
  })();
</script>
