<%- include('partials/head', { pageTitle: 'Payment | Supermarket', bodyClass: 'bg-surface' }) %>
<%- include('partials/topbar') %>

<main class="page-section">
  <div class="container">
    <% if (messages && messages.length) { %>
      <% messages.forEach(function(message) { %>
        <div class="alert alert-success mb-3"><%= message %></div>
      <% }); %>
    <% } %>

    <% if (errors && errors.length) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert alert-danger mb-3"><%= error %></div>
      <% }); %>
    <% } %>

    <div class="row g-4">
      <div class="col-12 col-lg-7">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <h4 class="mb-3">Payment</h4>
            <form action="/payment/confirm" method="POST" class="d-flex flex-column gap-3">
              <div class="row g-3">
                <div class="col-12">
                  <label class="form-label">Name on card</label>
                  <input type="text" name="cardName" class="form-control" placeholder="<%= pending && pending.fullName ? pending.fullName : 'Full name' %>" required>
                </div>
                <div class="col-12">
                  <label class="form-label">Card number</label>
                  <input type="text" name="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" minlength="12" maxlength="19" inputmode="numeric" required>
                </div>
                <div class="col-6">
                  <label class="form-label">Expiry</label>
                  <input type="text" name="expiry" class="form-control" placeholder="MM/YY" minlength="4" maxlength="5" required>
                </div>
                <div class="col-6">
                  <label class="form-label">CVV</label>
                  <input type="text" name="cvv" class="form-control" placeholder="123" minlength="3" maxlength="4" inputmode="numeric" required>
                </div>
              </div>

              <div class="alert alert-info mb-0">
                <div class="fw-semibold mb-1">Delivery</div>
                <div class="small mb-1">Method: <%= pending ? pending.deliveryMethod : 'pickup' %></div>
                <% if (pending && pending.deliveryMethod === 'delivery') { %>
                  <div class="small mb-0">Address: <%= pending.deliveryAddress %></div>
                <% } %>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">Pay $<%= totalWithFees.toFixed(2) %></button>
                <a class="btn btn-outline-secondary" href="/checkout">Back to checkout</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-5">
        <div class="card summary-card shadow-sm">
          <div class="card-body">
            <h5 class="mb-3">Order summary</h5>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Items</span>
              <span class="fw-semibold">$<%= itemsTotal.toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Delivery fee</span>
              <span class="pill-soft">$<%= Number(deliveryFee || 0).toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center border-top pt-3">
              <span class="fw-semibold">Total</span>
              <span class="fw-bold">$<%= totalWithFees.toFixed(2) %></span>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
          <div class="card-body">
            <h6 class="mb-3">Items</h6>
            <div class="d-flex flex-column gap-2">
              <% cart.forEach(function(item) { %>
                <div class="d-flex justify-content-between">
                  <span><%= item.productName %> Ã— <%= item.quantity %></span>
                  <span class="fw-semibold">$<%= item.lineTotal.toFixed(2) %></span>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
