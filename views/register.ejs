<%- include('partials/head', { pageTitle: 'Register | Supermarket App', bodyClass: 'bg-surface' }) %>
<%- include('partials/topbar') %>

  <section class="page-section py-5">
    <div class="container">
      <div class="row g-4 align-items-center">
        <div class="col-12 col-lg-6">
          <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f5fff8, #f0f8ff);">
            <div class="card-body">
              <p class="badge bg-success-subtle text-success mb-3">New to Supermarket</p>
              <h1 class="fw-bold text-navy mb-3">Create your account and start shopping.</h1>
              <p class="text-muted mb-4">Save your cart, get personalised picks, and checkout faster on every visit.</p>
              <ul class="list-unstyled text-muted small mb-0">
                <li class="mb-2">• Sync carts across devices</li>
                <li class="mb-2">• Quick reorder from purchase history</li>
                <li>• Stay updated on best sellers and offers</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <h4 class="mb-2">Register</h4>
              <p class="text-muted mb-3">Create a secure account to continue.</p>

              <% if (messages && messages.length) { %>
                <div class="alert alert-danger">
                  <% messages.forEach(function(message) { %>
                    <p class="mb-1"><%= message %></p>
                  <% }); %>
                </div>
              <% } %>

              <form action="/register" method="POST" class="mt-3">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" id="username" name="username" class="form-control" placeholder="Jane Doe" required value="<%= formData && formData.username ? formData.username : '' %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com" required value="<%= formData && formData.email ? formData.email : '' %>">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Create a secure password" required>
                  <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="toggleRegisterPassword" data-toggle-password data-target="password">
                    <label class="form-check-label" for="toggleRegisterPassword">Show password</label>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="address" class="form-label">Address</label>
                  <input type="text" id="address" name="address" class="form-control" placeholder="123 Supermarket Street" required value="<%= formData && formData.address ? formData.address : '' %>">
                </div>
                <div class="mb-4">
                  <label for="contact" class="form-label">Contact Number</label>
                  <input type="text" id="contact" name="contact" class="form-control" placeholder="(+65) 1234 5678" required value="<%= formData && formData.contact ? formData.contact : '' %>">
                </div>
                <button type="submit" class="btn btn-primary w-100">Create account</button>
              </form>
              <p class="text-center text-muted mt-3 mb-0">Already have an account? <a href="/login">Sign in</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <small>&copy; <%= new Date().getFullYear() %> Supermarket App</small>
    </div>
  </footer>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('[data-toggle-password]').forEach(function (toggle) {
        var target = document.getElementById(toggle.dataset.target);
        if (!target) {
          return;
        }
        toggle.addEventListener('change', function () {
          target.type = toggle.checked ? 'text' : 'password';
        });
      });
    });
  </script>
<%- include('partials/footer') %>







