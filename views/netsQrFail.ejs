<%- include('partials/head', { pageTitle: 'NETS QR Failed | Supermarket', bodyClass: 'bg-surface' }) %>
<%- include('partials/topbar') %>

<main class="page-section">
  <div class="container">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h4 class="mb-2"><%= title %></h4>
        <p class="text-muted mb-3"><%= errorMsg %></p>

        <div class="alert alert-warning">
          <div>Response code: <%= responseCode %></div>
          <% if (instructions) { %>
            <div>Instructions: <%= instructions %></div>
          <% } %>
        </div>

        <div class="d-flex gap-2">
          <a class="btn btn-secondary fw-semibold" href="/payment">Back to payment</a>
          <a class="btn btn-success fw-semibold" href="/shopping">Continue shopping</a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
